<?xml version="1.0" encoding="UTF-8"?>
<web-app>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>JTS4GWT.html</welcome-file>
  </welcome-file-list>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>echoServlet</servlet-name>
    <servlet-class>net.sf.jts4gwt.server.EchoServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>echoServlet</servlet-name>
    <url-pattern>/jts4gwt/echo</url-pattern>
  </servlet-mapping>

</web-app>
