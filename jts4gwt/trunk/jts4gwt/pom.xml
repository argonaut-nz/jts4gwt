			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<includes>
						<include>**com/google/**</include>
					</includes>
					<excludes>
						<exclude>net/sf/jts4gwt/emul/**</exclude>
						<exclude>net/sf/jts4gwt/emul/com/**</exclude>
						<exclude>net/sf/jts4gwt/emul/java/**</exclude>
						<exclude>**emul**.java</exclude>
					</excludes>
				</configuration>
